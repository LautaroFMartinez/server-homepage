---
import Layout from '../layouts/Layout.astro';
import Clock from '../components/Clock.svelte';
import SystemMetrics from '../components/SystemMetrics.svelte';
import DraggableServices from '../components/DraggableServices.svelte';
import DockerContainers from '../components/DockerContainers.svelte';
import CloudflareMetrics from '../components/CloudflareMetrics.svelte';
import Speedtest from '../components/Speedtest.svelte';
import TopProcesses from '../components/TopProcesses.svelte';
import Toast from '../components/Toast.svelte';
import CommandPalette from '../components/CommandPalette.svelte';
import QuickNotes from '../components/QuickNotes.svelte';
import Uptime from '../components/Uptime.svelte';
import { services, QUICK_ACCESS_COUNT } from '../config/services';

const quickAccess = services.slice(0, QUICK_ACCESS_COUNT);
const otherServices = services.slice(QUICK_ACCESS_COUNT);
---

<Layout title="Lau's Server">
  <Toast client:load />
  <CommandPalette services={services} client:load />
  <QuickNotes client:load />

  <div class="min-h-screen p-4 md:p-8">
    <div class="max-w-7xl mx-auto space-y-6">
      <header class="text-center py-4">
        <h1 class="text-3xl md:text-4xl font-bold text-gradient mb-2">
          Lau's Server
        </h1>
        <div class="flex items-center justify-center gap-2">
          <p class="text-gray-500 text-sm">Dashboard</p>
          <span class="text-gray-600">Â·</span>
          <Uptime client:load />
        </div>
      </header>

      <section>
        <Clock client:load />
      </section>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="space-y-6">
          <SystemMetrics client:load />

          <div class="glass rounded-xl p-6">
            <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-yellow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              Acceso Rapido
              <span class="text-xs text-gray-500 font-normal ml-auto">drag to reorder</span>
            </h2>
            <DraggableServices services={quickAccess} storageKey="quick-services-order" client:load />
          </div>

          <TopProcesses client:load />
        </div>

        <div class="lg:col-span-1 space-y-6">
          <DockerContainers client:load />
          <Speedtest client:load />
        </div>

        <div class="space-y-6">
          <div class="glass rounded-xl p-6">
            <h2 class="text-lg font-semibold mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-accent-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
              </svg>
              Servicios
              <span class="text-xs text-gray-500 font-normal ml-auto">drag to reorder</span>
            </h2>
            <DraggableServices services={otherServices} storageKey="other-services-order" client:load />
          </div>

          <CloudflareMetrics client:load />
        </div>
      </div>

      <footer class="text-center py-4 text-gray-600 text-xs">
        <p>Running on Docker</p>
      </footer>
    </div>
  </div>
</Layout>
